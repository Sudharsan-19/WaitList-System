 <!-- form handling! -->
 <form action="/api/users" method="POST" id="add_user">
    <div class="new_user">
        <div class="form-group">
            <label for="name" class="text-light">Name</label>
            <input type="hidden" name="id" value="">
            <input type="text" name="name" value="" placeholder="Enter the user's name">
        </div>
        <div class="form-group">
            <label for="Email" class="text-light">Email</label>
            <input type="text" name="email" value="" placeholder="example@example.com">
        </div>
        <div class="form-group">
            <label for="Password" class="text-light">Password</label>
            <input type="password" name="password" value="" placeholder="Enter the user's password">
            <label for="CPassword" class="text-light">Confirm Password</label>
            <input type="password" name="cpassword" value="" placeholder="Confirm the user's password">
        </div>
        <div class="form-group">
            <button type="submit" class="btn text-dark update">Save</button>
        </div>
    </div>
</form>
